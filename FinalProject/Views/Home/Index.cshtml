@*
    Welcome page for the E-Library.
    This page serves as the initial landing page, displaying a welcome message and
    potentially important announcements. It does not include book listings, search,
    or filtering, which would typically be on a separate "Books" or "Catalog" page.
    This version is enhanced for better responsiveness and visual appeal,
    assuming header and footer are handled by the layout file.
    The announcement banner styling has been improved.
*@

@* Define the page title *@
@{
    ViewData["Title"] = "Welcome to Our E-Library";

    // Retrieve the Announcement model if available (assuming controller puts it here)
    var announcement = ViewData["Announcement"] as FinalProject.Models.Announcement;
}

@* Ensure your _Layout.cshtml includes Bootstrap CSS (Bootstrap 5 recommended) *@
@* Also include Bootstrap Icons CSS for the icons used in the features section *@
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

@* Add Google Font - Using 'Poppins' for a friendly feel *@
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">

@* Custom CSS for subtle effects and fonts - Moved inline for this example, but ideally in a separate file *@
<style>
    body {
        font-family: 'Poppins', sans-serif; /* Apply Poppins font to the body */
        background-color: #f8f9fa; /* Light background color */
        /* Removed flexbox properties as layout handles footer */
    }

    /* Adjust container padding for responsiveness */
    .container {
        padding-top: 1.5rem;
        padding-bottom: 1.5rem;
    }

    /* Announcement Banner Styling */
    /* Targeting the specific alert used for announcements */
    .alert.alert-info {
        background-color: #e0f7fa; /* Lighter blue background */
        border-color: #b2ebf2; /* Slightly darker border */
        color: #006064; /* Darker text color for better contrast */
        padding: 1.5rem; /* Increased padding */
        border-radius: 0.75rem; /* More rounded corners */
        box-shadow: 0 0.25rem 0.75rem rgba(0, 0, 0, 0.08); /* Subtle shadow */
        position: relative; /* Needed for close button positioning */
    }

    .alert.alert-info .alert-heading {
        color: #004d40; /* Even darker heading color */
        margin-bottom: 0.75rem; /* Space below heading */
    }

    .alert.alert-info .btn-close {
        /* Adjust close button position and color */
        position: absolute;
        top: 1rem;
        right: 1rem;
        color: #006064; /* Match text color */
        opacity: 0.7;
    }

    .alert.alert-info .btn-close:hover {
         opacity: 1;
    }


    /* Hero Section Styling */
    .hero-section {
        background: linear-gradient(45deg, #0d6efd, #0dcaf0); /* Gradient background */
        color: white; /* White text for contrast */
        padding: 6rem 0; /* More vertical padding */
        border-radius: 0.5rem;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15); /* Stronger shadow */
        margin-bottom: 3rem; /* Space below hero */
    }

    .hero-section h1 {
        color: white !important; /* Ensure heading is white */
        font-weight: 700; /* Bolder font */
    }

    .hero-section p {
        color: rgba(255, 255, 255, 0.9) !important; /* Slightly transparent white for body text */
        max-width: 700px; /* Limit text width */
        margin-left: auto;
        margin-right: auto;
    }

    .hero-section .btn {
        background-color: #ffffff; /* White button background */
        color: #0d6efd; /* Primary color text */
        border: none;
        font-weight: 600;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

    .hero-section .btn:hover {
        background-color: #e9ecef; /* Light grey on hover */
        color: #0d6efd;
    }


    /* Features Section Styling */
    .features-section .card {
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        border: none; /* Remove default card border */
    }

    .features-section .card:hover {
        transform: translateY(-10px); /* Lift more on hover */
        box-shadow: 0 1rem 2rem rgba(0,0,0,.1)!important; /* Adjusted shadow on hover */
    }

    .features-section .card-title i {
        font-size: 1.8rem; /* Larger icons */
        vertical-align: middle;
    }

    /* About Us Section Styling */
    .about-section .card {
        border: none;
        box-shadow: 0 0.25rem 0.75rem rgba(0, 0, 0, 0.05); /* Lighter shadow */
    }

    /* Ensure text colors match Bootstrap palette */
    .text-primary {
        color: #0d6efd !important; /* Bootstrap primary color */
    }

     .text-secondary {
        color: #6c757d !important; /* Bootstrap secondary color */
    }

     .text-dark {
         color: #212529 !important; /* Bootstrap dark color */
     }

     /* General utility classes */
     .rounded-3 {
        border-radius: 0.5rem !important; /* Standard rounded corners */
    }

    .shadow-sm {
         box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075) !important; /* Subtle shadow */
    }

</style>


<div class="container"> @* Use a container for standard padding and centering *@

    @* Announcement Section - Display if an announcement is available *@
    @if (announcement != null)
    {
        @* Added custom styling to the alert class directly in CSS *@
        <div class="alert alert-info alert-dismissible fade show mb-4" role="alert">
            <h4 class="alert-heading">@announcement.Title</h4>
            <p>@announcement.Message</p>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @* Welcoming Hero Section - Enhanced Styling *@
    <div class="hero-section text-center"> @* Apply custom hero class *@
        <div class="container-fluid py-5">
            <h1 class="display-4 fw-bold mb-3">Welcome to Our E-Library</h1> @* Text color handled by hero-section class *@
            <p class="fs-5 col-md-8 mx-auto">
                Your gateway to a vast collection of books, stories, and knowledge.
                Dive in and explore our digital shelves from the comfort of your home.
            </p>
            @* Optional: Add a button to navigate to the books page *@
            <a asp-controller="Book" asp-action="Index" class="btn btn-lg mt-4">Browse Our Collection</a> @* Button styling handled by hero-section *@
        </div>
    </div>

    @* Features Section - Using Cards *@
     <div class="features-section row row-cols-1 row-cols-md-3 g-4 mb-5 text-center"> @* Apply custom features class *@
        <div class="col">
            <div class="card h-100 shadow-sm"> @* Use shadow-sm here *@
                <div class="card-body">
                    <h5 class="card-title text-primary"><i class="bi bi-book-half me-2"></i>Vast Collection</h5> @* Using Bootstrap Icons *@
                    <p class="card-text text-secondary">Access thousands of titles across diverse genres.</p>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card h-100 shadow-sm">
                 <div class="card-body">
                    <h5 class="card-title text-primary"><i class="bi bi-laptop me-2"></i>Read Anywhere</h5>
                    <p class="card-text text-secondary">Enjoy reading on your computer, tablet, or phone.</p>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="card h-100 shadow-sm">
                 <div class="card-body">
                    <h5 class="card-title text-primary"><i class="bi bi-lightbulb me-2"></i>Explore & Learn</h5>
                    <p class="card-text text-secondary">Discover new authors and expand your horizons.</p>
                </div>
            </div>
        </div>
    </div>

    @* Simple About Us Section *@
    <div class="about-section row justify-content-center mb-5"> @* Apply custom about class *@
        <div class="col-md-10 col-lg-8"> @* Adjusted column width for larger screens *@
            <div class="card shadow-sm"> @* Use shadow-sm here *@
                <div class="card-body text-center">
                    <h3 class="card-title text-dark mb-3">About Our Library</h3>
                    <p class="card-text text-secondary">
                        We are a private library store dedicated to bringing the joy of reading to everyone.
                        With a curated selection of books ranging from timeless classics to the latest releases,
                        we aim to be your go-to destination for all your literary needs. Our online platform
                        makes it easier than ever to find your next favorite book.
                    </p>
                    @* Optional: Link to a dedicated About Us page if you have one *@
                    @* <a href="#" class="btn btn-outline-primary mt-3">Learn More</a> *@
                </div>
            </div>
        </div>
    </div>


</div> @* End of container *@

@section Scripts {
    @* Add Bootstrap JS if needed for dismissible alerts or other components *@
    @* <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script> *@
