@model FinalProject.ViewModels.ProfileViewModel

@{
    ViewData["Title"] = "Member Profile"; // Descriptive title
}

@* Assuming Bootstrap CSS and Font Awesome are already included in your layout file (_Layout.cshtml) *@
@* If not, you would need to add the CDN links: *@
@* <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"> *@
@* <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"> *@
@* And the Bootstrap JS bundle (for alerts, etc.): *@
@* <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script> *@


<div class="container mt-4 py-4"> @* Use Bootstrap container, margin top, and vertical padding *@

    <h1 class="mb-2 text-center text-primary">Member Profile</h1> @* Bootstrap heading, centered, primary color *@
    <h4 class="mb-4 text-center text-secondary">Your Account Details</h4> @* Subtitle, centered, secondary color *@
    <hr class="mb-4"/>

    @* Introductory Information Section *@
    <div class="alert alert-info shadow-sm mb-4" role="alert">
        <h5 class="alert-heading"><i class="fas fa-user-circle me-2"></i> Your Profile Information</h5>
        <p>View and manage your account details below.</p>
    </div>

    @* Profile Details Card *@
    <div class="card shadow-lg border-0 rounded-3"> @* Bootstrap card container for details with larger shadow, no border, rounded corners *@
        <div class="card-body p-4"> @* Increased padding *@
            <h4 class="card-title mb-4 text-secondary">Account Details</h4> @* Secondary color for title *@

            <div class="row g-3"> @* Bootstrap row for details layout with larger gap *@
                @* Full Name *@
                <div class="col-md-6">
                    <p class="text-muted mb-1 fw-bold"><i class="fas fa-user me-2"></i> Full Name:</p> @* Muted text, bold, icon *@
                    <p class="mb-0">@Model.FullName</p> @* Remove bottom margin *@
                </div>
                @* Email *@
                <div class="col-md-6">
                    <p class="text-muted mb-1 fw-bold"><i class="fas fa-envelope me-2"></i> Email:</p> @* Muted text, bold, icon *@
                    <p class="mb-0">@Model.Email</p> @* Remove bottom margin *@
                </div>
                @* Membership ID *@
                <div class="col-md-6">
                    <p class="text-muted mb-1 fw-bold"><i class="fas fa-id-card me-2"></i> Membership ID:</p> @* Muted text, bold, icon *@
                    <p class="mb-0">@Model.MembershipId</p> @* Remove bottom margin *@
                </div>
                @* Registration Date *@
                <div class="col-md-6">
                    <p class="text-muted mb-1 fw-bold"><i class="fas fa-calendar-alt me-2"></i> Registration Date:</p> @* Muted text, bold, icon *@
                    <p class="mb-0">@Model.RegistrationDate.ToShortDateString()</p> @* Remove bottom margin *@
                </div>
                @* Last Login *@
                <div class="col-md-6">
                    <p class="text-muted mb-1 fw-bold"><i class="fas fa-clock me-2"></i> Last Login:</p> @* Muted text, bold, icon *@
                    <p class="mb-0">@(Model.LastLogin.HasValue ? Model.LastLogin.Value.ToString("yyyy-MM-dd HH:mm") : "Never")</p> @* Format date/time, remove bottom margin *@
                </div>
                @* Total Orders *@
                <div class="col-md-6">
                    <p class="text-muted mb-1 fw-bold"><i class="fas fa-shopping-bag me-2"></i> Total Orders:</p> @* Muted text, bold, icon *@
                    <p class="mb-0">@Model.OrderCount</p> @* Remove bottom margin *@
                </div>
                 @* Stackable Discount *@
                <div class="col-md-6">
                    <p class="text-muted mb-1 fw-bold"><i class="fas fa-percent me-2"></i> Stackable Discount:</p> @* Muted text, bold, icon *@
                    <p class="mb-0">@Model.StackableDiscount.ToString("P")</p> @* Format as percentage, remove bottom margin *@
                </div>
                 @* Add more profile details here as needed *@
                 @* Example: Address *@
                 @*
                 <div class="col-md-6">
                     <p class="text-muted mb-1 fw-bold"><i class="fas fa-map-marker-alt me-2"></i> Address:</p>
                     <p class="mb-0">@Model.Address</p>
                 </div>
                 *@
            </div>

            @* Optional: Add sections for recent orders, reviews, etc. *@
            @* Example for recent orders (if you added RecentOrders to ViewModel): *@
            @*
            @if (Model.RecentOrders != null && Model.RecentOrders.Any())
            {
                <h4 class="mt-4 mb-3 text-secondary">Recent Orders</h4>
                <ul class="list-group list-group-flush"> // Use list-group-flush for no borders between items
                    @foreach (var order in Model.RecentOrders)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Order #@order.OrderId - @order.OrderDate.ToShortDateString()
                            // Optional: Add a link to view order details
                            // <a asp-controller="Orders" asp-action="Details" asp-route-id="@order.OrderId" class="btn btn-sm btn-outline-primary">Details</a>
                        </li>
                    }
                </ul>
            }
            *@

            @* Action Buttons *@
            <div class="d-flex flex-wrap gap-3 mt-4"> @* Bootstrap flex container for buttons with larger gap, margin top *@
                @* Example links for editing profile or changing password *@
                @* Uncomment and adjust asp-action and asp-route-id as needed *@
                @* Assuming MemberId is available in your ViewModel *@
                 @*
                 <a asp-action="Edit" asp-route-id="@Model.MemberId" class="btn btn-primary btn-lg shadow-sm">
                     <i class="fas fa-edit me-2"></i> Edit Profile
                 </a>
                 <a asp-action="ChangePassword" class="btn btn-secondary btn-lg shadow-sm">
                      <i class="fas fa-key me-2"></i> Change Password
                 </a>
                 *@
                 @* Example Back to Home/Dashboard Button *@
                 <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-lg shadow-sm">
                      <i class="fas fa-home me-2"></i> Back to Home
                 </a>
            </div>
        </div>
    </div>
</div>

@* Optional: Link to Bootstrap JS if needed for components like dropdowns, modals, etc. *@
@* <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script> *@
