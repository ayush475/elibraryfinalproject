@model FinalProject.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register for an Account"; // More descriptive title
}

@* Assuming Bootstrap CSS and Font Awesome are already included in your layout file (_Layout.cshtml) *@
@* If not, you would need to add the CDN links: *@
@* <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"> *@
@* <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"> *@
@* And the Bootstrap JS bundle (for alerts, etc.): *@
@* <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script> *@


<div class="container mt-4 py-4"> @* Use Bootstrap container, margin top, and vertical padding *@

    <h1 class="mb-2 text-center text-primary">Register for an Account</h1> @* Bootstrap heading, centered, primary color *@
    <h4 class="mb-4 text-center text-secondary">Join Our Community</h4> @* Subtitle, centered, secondary color *@
    <hr class="mb-4"/>

    @* Introductory Information Section *@
    <div class="alert alert-info shadow-sm mb-4" role="alert">
        <h5 class="alert-heading"><i class="fas fa-info-circle me-2"></i> Welcome!</h5>
        <p>Create an account to unlock features like bookmarking books, managing your profile, and more.</p>
        <hr>
        <p class="mb-0">Please fill out the form below to register.</p>
    </div>

    @* Potential Warnings/Requirements Section (Example) *@
    @* You can customize this based on your actual registration requirements *@
     <div class="alert alert-warning shadow-sm mb-4" role="alert">
        <h5 class="alert-heading"><i class="fas fa-exclamation-triangle me-2"></i> Important Notes</h5>
        <p class="mb-0">Your password must meet the following criteria:</p>
        <ul class="mb-0">
            <li>At least 6 characters long.</li>
            <li>Include at least one uppercase letter.</li>
            <li>Include at least one lowercase letter.</li>
            <li>Include at least one digit.</li>
            <li>Include at least one special character (e.g., !#$%^&*).</li>
        </ul>
    </div>


    <div class="card shadow-lg border-0 rounded-3"> @* Bootstrap card container for the form with larger shadow, no border, rounded corners *@
        <div class="card-body p-4"> @* Increased padding *@
            <h4 class="card-title mb-4 text-secondary">Registration Form</h4> @* Secondary color for title *@

            <div class="row justify-content-center"> @* Center the form column *@
                <div class="col-md-8 col-lg-6"> @* Adjust column size for better form width *@
                    <form asp-action="Register">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger shadow-sm mb-4"></div> @* Style validation summary as an alert *@

                        <div class="mb-3"> @* Use mb-3 for consistent spacing *@
                            <label asp-for="MembershipId" class="form-label fw-bold text-muted"><i class="fas fa-id-card me-2"></i> @Html.DisplayNameFor(model => model.MembershipId)</label> @* Bootstrap form-label, bold, muted text, icon *@
                            <input asp-for="MembershipId" class="form-control form-control-lg" /> @* Larger form control *@
                            <span asp-validation-for="MembershipId" class="text-danger small"></span> @* Smaller text for validation messages *@
                        </div>
                        <div class="mb-3">
                            <label asp-for="FirstName" class="form-label fw-bold text-muted"><i class="fas fa-user me-2"></i> @Html.DisplayNameFor(model => model.FirstName)</label> @* Bootstrap form-label, bold, muted text, icon *@
                            <input asp-for="FirstName" class="form-control form-control-lg" /> @* Larger form control *@
                            <span asp-validation-for="FirstName" class="text-danger small"></span> @* Smaller text for validation messages *@
                        </div>
                        <div class="mb-3">
                            <label asp-for="LastName" class="form-label fw-bold text-muted"><i class="fas fa-user me-2"></i> @Html.DisplayNameFor(model => model.LastName)</label> @* Bootstrap form-label, bold, muted text, icon *@
                            <input asp-for="LastName" class="form-control form-control-lg" /> @* Larger form control *@
                            <span asp-validation-for="LastName" class="text-danger small"></span> @* Smaller text for validation messages *@
                        </div>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold text-muted"><i class="fas fa-envelope me-2"></i> @Html.DisplayNameFor(model => model.Email)</label> @* Bootstrap form-label, bold, muted text, icon *@
                            <input asp-for="Email" class="form-control form-control-lg" /> @* Larger form control *@
                            <span asp-validation-for="Email" class="text-danger small"></span> @* Smaller text for validation messages *@
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="form-label fw-bold text-muted"><i class="fas fa-lock me-2"></i> @Html.DisplayNameFor(model => model.Password)</label> @* Bootstrap form-label, bold, muted text, icon *@
                            <input asp-for="Password" class="form-control form-control-lg" type="password" /> @* Larger form control *@
                            <span asp-validation-for="Password" class="text-danger small"></span> @* Smaller text for validation messages *@
                        </div>
                        <div class="mb-4"> @* Increased bottom margin for the last input group *@
                            <label asp-for="ConfirmPassword" class="form-label fw-bold text-muted"><i class="fas fa-lock me-2"></i> @Html.DisplayNameFor(model => model.ConfirmPassword)</label> @* Bootstrap form-label, bold, muted text, icon *@
                            <input asp-for="ConfirmPassword" class="form-control form-control-lg" type="password" /> @* Larger form control *@
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span> @* Smaller text for validation messages *@
                        </div>

                        <div class="d-grid"> @* Use d-grid to make the button full-width *@
                            <button type="submit" class="btn btn-primary btn-lg shadow">
                                <i class="fas fa-user-plus me-2"></i> Register
                            </button> @* Bootstrap primary button, large size, shadow, icon *@
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @* Login Link *@
    <div class="text-center mt-4"> @* Centered text with margin top *@
        <p class="text-muted">Already have an account? <a asp-action="Login" class="text-decoration-none fw-semibold">Login here</a>.</p> @* Muted text, no underline on link, bold link text *@
    </div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
